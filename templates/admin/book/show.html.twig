{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ book.cover }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Plot</th>
                <td>{{ book.plot }}</td>
            </tr>
            <tr>
                <th>EditedAt</th>
                <td>{{ book.editedAt ? book.editedAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ book.price }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ book.isbn }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_book_index') }}">back to list</a>

    <a href="{{ path('app_admin_book_edit', {'id': book.id}) }}">edit</a>

    {{ include('admin/book/_delete_form.html.twig') }}
{% endblock %}
